<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="15dp">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/txt_Pelicla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:text="Pelicula"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/btn_calendario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Calendadio" />

            <TextView
                    android:id="@+id/txt_fecha_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="13dp"
                    android:text="Selecciona una fecha"
                    android:textColor="#FFC107"
                    android:textSize="18sp" />

            <TextView
                    android:text="Titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txt_Titulo" android:textSize="18sp"
                    android:paddingTop="20dp" android:gravity="center"/>

            <EditText
                    android:id="@+id/tv_Titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Titulo.."
                    android:inputType="textPersonName" />
            <TextView
                    android:text="Director"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txt_Director" android:textSize="18sp"
                    android:paddingTop="20dp" android:gravity="center"/>

            <EditText
                    android:id="@+id/tv_Director"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Director.."
                    android:inputType="textPersonName" />

            <TextView
                    android:id="@+id/txt_sinopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:text="Sinopsis"
                    android:textSize="18sp" />

            <EditText
                    android:id="@+id/tv_Sinopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Director.."
                    android:inputType="textPersonName" />

            <TextView
                    android:id="@+id/txt_Pais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:text="Pais"
                    android:textSize="18sp" />

            <EditText
                    android:id="@+id/tv_Pais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Pais.."
                    android:inputType="textPersonName" />

            <TextView
                    android:text="Imagen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView13" android:textSize="18sp"
                    android:paddingTop="20dp" android:gravity="center"/>
            <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="200dp" app:srcCompat="@drawable/avatar1"
                    android:id="@+id/ivImagenPelicula"
                    android:scaleType="fitCenter" android:layout_gravity="center"/>
            <Button
                    android:text="Agregar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn_agregar"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>